{
  // Required
  "name": "Majestro",
  "version": "0.72",
  "manifest_version": 2,

  // Recommended
  "description": "Majestro Extension",
  "icons": {
    "128": "images/icon.png"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P",
        "chromeos": "Alt+Shift+P",
        "linux": "Alt+Shift+P"
      }
    }
  },

  // Type of action
  "browser_action": {
    "default_title": "Password is always for some reason, and for someone.",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "images/*.png",
    "style/popup.css"
  ],

  // Intent of app
  "permissions": [
    "activeTab",
    "storage"
  ]
}